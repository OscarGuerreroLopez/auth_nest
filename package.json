{
  "name": "auth",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "nx serve",
    "build": "nx build",
    "test": "nx test",
    "test:registration": "nx run registration:test",
    "test:login": "nx run login:test",
    "build:all": "nx run-many --target=build --projects=login,registration --parallel",
    "serve:all": "NODE_ENV=local nx run-many --target=serve --projects=login,registration --parallel",
    "deploy:registration": "nx deploy registration",
    "deploy:login": "nx deploy login",
    "deploy": "nx affected --target=deploy",
    "typeorm": "ts-node -P ./tsconfig.base.json $(yarn bin typeorm)",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d ./libs/infrastructure/src/lib/config/typeorm/typeorm.config.ts",
    "typeorm:generate-migration": "npm run typeorm -- -d ./libs/infrastructure/src/lib/config/typeorm/typeorm.config.ts migration:generate ./db/migrations/user",
    "typeorm:create-migration": "npm run typeorm -- migration:create ./db/migrations/user",
    "typeorm:revert-migration": "npm run typeorm -- -d ./libs/infrastructure/src/lib/config/typeorm/typeorm.config.ts migration:revert"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.1.2",
    "@nestjs/typeorm": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "mysql2": "^2.3.3",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0",
    "tslib": "^2.3.0",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@nrwl/cli": "14.5.8",
    "@nrwl/eslint-plugin-nx": "14.5.8",
    "@nrwl/jest": "14.5.8",
    "@nrwl/linter": "14.5.8",
    "@nrwl/nest": "14.5.8",
    "@nrwl/node": "14.5.8",
    "@nrwl/workspace": "14.5.8",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "jest": "27.5.1",
    "nx": "14.5.8",
    "prettier": "^2.6.2",
    "ts-jest": "27.1.4",
    "ts-node": "10.9.1",
    "typescript": "~4.7.2"
  }
}
